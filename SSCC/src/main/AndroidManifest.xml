<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.ls4soft.sscc">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="pl.ls4soft.sscc.MainActivity"
            android:label="@string/app_long_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.CalcActivity"
            android:label="@string/title_activity_calc"
            android:parentActivityName="pl.ls4soft.sscc.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.MainActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.UtilityActivity"
            android:label="@string/title_activity_utility"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.TrafoActivity"
            android:label="@string/title_activity_trafo"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.LineActivity"
            android:label="@string/title_activity_line"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.LoadActivity"
            android:label="@string/title_activity_load"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="pl.ls4soft.sscc.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.MainActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.MotorActivity"
            android:label="@string/title_activity_motor"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
        <activity
            android:name="pl.ls4soft.sscc.Items.BusActivity"
            android:label="@string/title_activity_bus"
            android:parentActivityName="pl.ls4soft.sscc.CalcActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.ls4soft.sscc.CalcActivity" />
        </activity>
    </application>

</manifest>