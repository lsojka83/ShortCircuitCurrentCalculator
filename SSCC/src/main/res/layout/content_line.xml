<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.ls4soft.sscc.Items.LineActivity"
    tools:showIn="@layout/activity_line"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:text="@string/name_item"
                        android:id="@+id/lineNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/name_p"
                        android:id="@+id/lineNameET"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:id="@+id/LineLenghtTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:text="@string/line_lenght"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/LineLenghtET"
                        android:hint="@string/value_p"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:text="@string/line_cs"
                        android:id="@+id/LineSectionTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/LineSectionET"
                        android:hint="@string/value_p"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:id="@+id/LineMaterialTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:text="@string/line_mat"
                        android:gravity="center_vertical">

                    </TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/LineMaterialSpinner"
                        android:prompt="@string/cableMaterial_prompt"
                        android:gravity="center_vertical"
                        android:layout_height="35dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:id="@+id/LinePlacementTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:text="@string/line_plac"
                        android:gravity="center_vertical">

                    </TextView>

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/LinePlacementSpinner"
                        android:prompt="@string/cableMaterial_prompt"
                        android:gravity="center_vertical"
                        android:layout_height="35dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:text="@string/line_rea"
                        android:id="@+id/xlTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/xlET"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:text="-"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@android:color/holo_red_dark"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:text="@string/line_res"
                        android:id="@+id/rlTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:text="-"
                        android:id="@+id/rlET"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@android:color/holo_red_dark"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView

                        android:text="@string/line_imp"
                        android:id="@+id/zlTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dip"
                        android:textSize="10sp"
                        android:gravity="center_vertical">

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/zlET"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:text="-"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@android:color/holo_red_dark"
                        android:gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <Button
                        android:text="OK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/LOkBtn"
                        android:background="@drawable/edstyle_green"
                        android:layout_margin="1dp" />

                    <Button
                        android:text="@string/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/LCancelBtn"
                        android:background="@drawable/edstyle_blue"
                        android:layout_margin="1dp" />

                    <Button
                        android:text="@string/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/LDeleteBtn"
                        android:background="@drawable/edstyle_red"
                        android:layout_margin="1dp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
